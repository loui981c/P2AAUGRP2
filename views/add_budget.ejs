<%- include ("partials/header.ejs") %>
<body>
  <%- include ("partials/sidebar.ejs") %>
  <div class="addBudgetPage">
    <h1>Add A New Category</h1>

    <%# Form to add/create budget %>
    <form action="/budget/add" method="POST">
      <h2 class="headers" id="expense">Expense Category</h2>
      <h2 class="headers" id="income">Income Category</h2>
      <%# Toggle switch %> 
      <div class="switchBox">
        <label class="switch">
          <input type="checkbox" onclick="sliderToggle()" id="checkBoxSlider" name="switch">
          <span class="slider round"></span>
        </label>
        <input type="text" id="incomeTemp" name="income" value="unchecked" style="display: none;">
      </div>
      <%# Categories %>
      <div class="categoriesCheckbox">
          <label for="categoriesCheckbox">Category</label>
          <input class="basicInput" type="text" name="category" id="category" required>
      </div>
      <%# Expected %>
      <div class="expectedInput">
          <label for="expectedInput">Expected</label>
          <input class="basicInput" type="number" name="expected" id="expected" required>
      </div>
      <%# Colour %>
      <div>
        <label for="colourInput">Colour</label>
        <input class="colourInput" type="color" name="colourInput" id="colourInput" required>
      </div>

      <button class="submitBudget" type="submit">Submit</button>
    </form>
  </div>

  <script src="../public/scripts/budget.js"></script>
  <script>
    let toggle = 2;
    document.getElementById("expense").style.display = "block";
    document.getElementById("income").style.display = "none";
    let tempIncomeValue = document.getElementById("incomeTemp").value;

  function sliderToggle() {

    toggle+=1;
    
    if (toggle % 2 == 0) {
      document.getElementById("expense").style.display = "block";
      document.getElementById("income").style.display = "none";
      tempIncomeValue = "unchecked";
      
    } else {
      
      document.getElementById("expense").style.display = "none";
      document.getElementById("income").style.display = "block";
      tempIncomeValue = "checked";

    }
    console.log(tempIncomeValue);
    console.log(toggle);

} 
  </script>

</body>
</html>