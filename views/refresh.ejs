            position: absolute;
            top: 20%;
            left: 40%;
            border-radius: 50%;
            height: 20vw;
            animation: rotation 5s infinite linear;
        }

        @keyframes rotation {
        from {
            transform: rotate(0deg);
            }
        to {
            transform: rotate(359deg);
        }
}
