<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/sidebar.ejs") %> 
    <div class="transactionPageAdd">
    <h1>Add a new transaction</h1>

    <p>Choose category</p>
    <%# Showing all categories provided in transactions.ejs%>
    <form action="/transactions/add" method="post">
            <% for (let i = 0; i<categories.length; i++){ %> 
            <div class="catCheckbox">
                <label for="category>"><%= categories[i]%></label>
                <input type="radio" name="mainCategory" id="mainCategory>" value="<%= categories[i]%>" onclick="oneCheckAtATime(this)" required>
            </div>
        <% } %> 
        <%# sub category%>
        <div class="subCatForm">
            <label for="subCategory">Sub category</label>
            <input type="text" name="subCategory" id="subCategory">
        </div>
        <%# price%>
        <div class="priceForm">
            <label for="price">Price</label>
            <input type="number" name="price" id="price" required>
        </div>
        <div class="dateForm">
            <label for="date">Date</label>
            <input type="date" name="date" id="date" required>
        </div>
        
        <button class="submit" type="submit">Submit</button>
    </form>
    </div>

    <script>
  
        //set default value to day of today
            //https://stackoverflow.com/questions/6982692/how-to-set-input-type-dates-default-value-to-today
        document.getElementById('date').valueAsDate = new Date();

    </script>
    
</body>
</html>